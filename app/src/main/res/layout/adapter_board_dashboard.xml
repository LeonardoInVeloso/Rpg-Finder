<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="8dp">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/boardIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_width="1dp"
        app:civ_border_color="#9f78fd57"
        android:layout_marginTop="3dp"
        android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="-3dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/star_rating" />

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="5.0"
                android:textColor="#78fd57"
                android:textSize="11dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tempo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="8 anos"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="10dp"
            android:gravity="center_horizontal"
            android:textColor="#8492A6"
            android:fontFamily="sans-serif"
            android:layout_marginTop="-3dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/boardNameTextView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="Nome da Mesa"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="16dp"
                android:layout_marginLeft="3dp"
                android:textColor="#1F2D3D"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="Bairro"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="10dp"
                android:textColor="#8492A6"
                android:fontFamily="sans-serif"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnRed"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:text=""
                        android:layout_centerInParent="true"
                        android:background="@drawable/red_circle_shape"
                        android:textColor="#fff"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"/>
                    <TextView
                        android:id="@+id/daysText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text="Dias de jogo:"
                        android:textColor="#8492A6"
                        android:textSize="11dp"
                        android:layout_marginLeft="3dp"
                        android:fontFamily="sans-serif"/>
                    <TextView
                        android:id="@+id/daysTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text="Intervalo"
                        android:textColor="#8492A6"
                        android:textSize="11dp"
                        android:layout_marginLeft="3dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnPink"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/green_circle_shape"/>

                    <TextView
                        android:id="@+id/membersText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="3dp"
                        android:text="Membros:"
                        android:textColor="#8492A6"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/membersTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="3dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="10/10"
                        android:textColor="#8492A6"
                        android:textSize="11dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnblue"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/blue_circle_shape"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"/>
                    <TextView
                        android:id="@+id/othersText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text="Outros:"
                        android:textColor="#8492A6"
                        android:textSize="11dp"
                        android:layout_marginLeft="3dp"/>
                    <TextView
                        android:id="@+id/othersTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text="Feminino, crianças"
                        android:textColor="#8492A6"
                        android:textSize="11dp"
                        android:layout_marginLeft="3dp"
                        android:ellipsize="end"
                        android:maxLines="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnGreen"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:text=""
                        android:layout_centerInParent="true"
                        android:background="@drawable/pink_circle_shape"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"/>
                    <TextView
                        android:id="@+id/SystemText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text="Sistema:"
                        android:textColor="#8492A6"
                        android:textSize="11dp"
                        android:layout_marginLeft="3dp"
                        android:fontFamily="sans-serif"/>
                    <TextView
                        android:id="@+id/systemTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text="DeD 4.0"
                        android:textColor="#8492A6"
                        android:textSize="11dp"
                        android:layout_marginLeft="3dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnYellow"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/yellow_circle_shape"/>

                    <TextView
                        android:id="@+id/ScennaryText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="3dp"
                        android:text="Cenario:"
                        android:textColor="#8492A6"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/scennaryTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="3dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Tormenta"
                        android:textColor="#8492A6"
                        android:textSize="11dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnPurple"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:text=""
                        android:layout_centerInParent="true"
                        android:background="@drawable/purple_circle_shape"
                        android:textColor="#fff"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"/>
                    <TextView
                        android:id="@+id/localText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text="Local:"
                        android:textColor="#8492A6"
                        android:textSize="11dp"
                        android:layout_marginLeft="3dp"/>
                    <TextView
                        android:id="@+id/localTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text="Público"
                        android:textColor="#8492A6"
                        android:textSize="11dp"
                        android:layout_marginLeft="3dp"
                        android:ellipsize="end"
                        android:maxLines="1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>